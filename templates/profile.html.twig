        <div class="container">
            <div class="row justify-content-center align-items-end vh-50 pb-5">
                <div class="col col-md-10 col-lg-8">
                    <div class="row align-items-center">
                        <div class="col-4 col-lg-3">
                            <img class="mr-3 avatar avatar-xl rounded" src="{{ asset ('staff/default.jpg') }}" {#{{ asset (user.imageName) }}#} alt="Generic placeholder image">
                        </div>
                        <div class="col">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h2 class="mb-0"><b>{{ user.nickName }}</b></h2>
                                    <span class="text-muted">{{ user.name ~' '~ user.lastName}}</span>
                                </div>
                                <div class="col-md-4 text-left text-md-right">
                                    <button type="button" class="btn btn-rounded btn-ico btn-white" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add Friend"><i class="icon-plus2 fs-20"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Form -->
    <section class="bg-light pt-0">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-8">
                    {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}
                    <h5 class="mb-2 fs-10 font-weight-normal">Identit√©</h5>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.nickName) }}</div>
                        <div class="col">{{ form_row(form.email) }}</div>
                    </div>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.name) }} </div>
                        <div class="col">{{ form_row(form.lastname) }}</div>
                    </div>

                    <h5 class="mb-2 fs-20 font-weight-normal">Adresse</h5>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.address) }}</div>
                    </div>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.postalCode) }}</div>
                        <div class="col">{{ form_row(form.city) }}</div>
                    </div>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.ImageSaver) }}</div>
                    </div>
                    <div class="form-row">
                        <div class="col">{{ form_row(form.submit) }}</div>
                    </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>


