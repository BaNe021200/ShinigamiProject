<form method="post" action="{{ path('shini.player.delete', {'id': player.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn btn-outline-danger"><i class="fas fa-user-minus"></i> Delete</button>
</form>
