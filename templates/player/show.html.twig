{% extends 'player/layout.html.twig' %}

{% block title %}ShiniPlayer{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock stylesheets %}


{% block body %}
    <h1>ShiniPlayer</h1>
    <div class="container">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>NickName</th>
                <td>{{ player.nickName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ player.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ player.phone }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ player.birthday ? player.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CardCode</th>
                <td>{{ player.cardCode }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ player.roles ? player.roles|join(', ') : '' }}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{ player.email }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ player.postalCode }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ player.lastname }}</td>
            </tr>
            </tbody>
        </table>
        {% block buttonShow %}
            


        <div id="buttonCenter">
            <a href="{{ path('shini.player.list') }}">
                <button class="btn btn-outline-info"><i class="fas fa-arrow-circle-left"></i> back to list</button>
            </a>
            {% endblock buttonShow %}
            <a href="{{ path('shini.player.edit', {'id': player.id}) }}">
                <button class="btn btn-outline-warning"><i class="fas fa-user-edit  text-center"></i> edit</button>
            </a>


            {{ include('player/_delete_form.html.twig') }}</div>

    </div>
{% endblock %}
