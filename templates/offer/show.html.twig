{% extends 'base.html.twig' %}

{% block title %}ShiniOffer{% endblock %}

{% block body %}
    <h1>ShiniOffer</h1>

    <div class="container">
        <div class="row">

            <div class="col-md-6"> {% include 'staff/_sideBar.html.twig' %}
            </div>

            <div class="col-md-6">
                <table class="table table-striped">



                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ shini_offer.id }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ shini_offer.price }}</td>
                </tr>
                <tr>
                    <th>DateEnd</th>
                    <td>{{ shini_offer.dateEnd ? shini_offer.dateEnd|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ shini_offer.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ shini_offer.image }}</td>
                </tr>
                <tr>
                    <th>Publiée</th>
                    <td>{{ shini_offer.shown ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>A la une</th>
                    <td>{{ shini_offer.onfirstpage ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ shini_offer.name }}</td>
                </tr>
                <tr>
                    <th>Publié par</th>
                    <td>{{ shini_offer.staffAdviser.nickName }}</td>
                </tr>

                </tbody>
            </table>

                <div id="buttonCenter">
                    <a href="{{ path('shini.offer.list') }}"><button class="btn btn-outline-info"><i class="fas fa-arrow-circle-left"></i> back to list</button></a>

                    <a href="{{ path('shini.offer.edit', {'id': shini_offer.id}) }}"><button class="btn btn-outline-warning"><i class="fas fa-user-edit  text-center"></i> edit</button></a>

                    {{ include('offer/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
