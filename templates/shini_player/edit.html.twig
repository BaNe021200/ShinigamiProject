{% extends 'shini_player/layout.html.twig' %}

{% block title %}Edit ShiniPlayer{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock stylesheets %}

{% block body %}
    <h1>Edit ShiniPlayer</h1>



    <div class="container">

        {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}

        <div class="row">

            <div class="col-md-4">{{ form_row(form.name) }}</div>
            <div class="col-md-4">{{ form_row(form.lastname) }}</div>
            <div class="col-md-4">{{ form_row(form.nickName) }}</div>

        </div>

        <div class="row">

            <div class="col-md-4">{{ form_row(form.birthday) }}</div>
            <div class="col-md-4">{{ form_row(form.email) }}</div>
            <div class="col-md-4">{{ form_row(form.phone) }}</div>
        </div>

        <div class="row">

            <div class="col-md-4">{{ form_row(form.address) }}</div>
            <div class="col-md-4">{{ form_row(form.postalCode) }}</div>
            <div class="col-md-4">{{ form_row(form.city) }}</div>
        </div>

        <div class="row">
            <div class="col-md-6">{{ form_row(form.password.first) }}</div>
            <div class="col-md-6">{{ form_row(form.password.second) }}</div>

        </div>

        <div class="row">
            <div class="col-md-6">{{ form_row(form.submit) }}</div>
        </div>
        {{ form_widget(form) }}

        {{ form_end(form) }}

            {#{{ include('shini_player/_form.html.twig', {'button_label': 'Update'}) }}#}
            <div id="buttonCenter">
            <a href="{{ path('shini.player.list') }}">
                <button class="btn btn-outline-info "><i class="fas fa-arrow-circle-left"></i> back to list</button></a>

            {{ include('shini_player/_delete_form.html.twig') }}</div>
    </div>
{% endblock %}
