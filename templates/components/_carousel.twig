<div id="shinigamiCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for i in range(0, onLines|length) %}
            <li data-target="#ShiniGamiCarousel" data-slide-to="{{ i }}" {% if loop.first %}class="active"{% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for offer in onLines %}
            <div class="carousel-item {% if loop.first %}{{ active }}{% endif %}">
                <a href="{{ path('shini.offer.show', {id: offer.id,slug:offer.slug}) }}">
                    <img class="d-block w-100" src="{{ asset (offer.image) }}" alt="{{ offer.name }}">
                </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5>{{ offer.name }}</h5>
                    <p class="post-meta">Offre valable juqu'au {{ offer.dateEnd |date('d-m-Y') }}</p>
                    <p>{{ offer.getFormattedPrice }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#shinigamiCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#shinigamiCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>