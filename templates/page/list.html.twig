{% extends "layout.html.twig" %}


{% block page_title %}
   {# {{ title }} todo: renvoyer une variable depuis la route#}
{% endblock %}

{% block page %}
    <div class="row content-list-head justify-content-between my-2">
    <div class="col-auto">
        <h3>Listing :</h3>
    </div>
    <form class="col-md-auto my-2">
        <div class="input-group input-group-round">
            <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
            </div>
            <input type="search" class="form-control filter-list-input" placeholder="Chercher un joueur" aria-label="Filter Tasks" aria-describedby="filter-tasks">
        </div>
    </form>
</div>
    <div class="row content-list-body my-2">
        {% for item in items %}
            {% if loop.first %}
                {% set prefix = getEntityPrefixRoute(item) %}
            {% endif %}
            <div class="card my-2 container-fluid bg-white rounded">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <div>
                            <a href="#" data-toggle="tooltip" title="Kenny">
                                <img alt="Admin" class="avatar" src="{{ asset (item.imageName) }}">
                            </a>
                        </div>
                        <span class="text-small ml-2">{{ item.nickName }}</span>
                    </div>
                    <div>
                        <div class="dropdown card-options">
                            <button class="btn-options" type="button" {#id="task-dropdown-button-1"#} data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                {{ include('components/_item_actions.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}