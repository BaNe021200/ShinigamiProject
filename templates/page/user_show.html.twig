{% extends "layout.html.twig" %}


{% block page_title %}
    {{ title }}
{% endblock page_title %}

{% block page %}
    <section class="bg-light pt-0">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>NickName</th>
                            <td>{{ user.nickName }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ user.address }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>{{ user.birthday ? user.birthday|date('d-m-Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Center</th>
                            <td>{{ user.center.code }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        </tr>

                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Postal_code</th>
                            <td>{{ user.postalCode }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-2">
                    <button class="btn-options" type="button" {#id="task-dropdown-button-1"#} data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        {{ include('components/_item_actions.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block final_javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js" integrity="sha256-SUaao5Q7ifr2twwET0iyXVy0OVnuFJhGVi5E/dqEiLU=" crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script>
        $('.dropify').dropify({
            messages: {
                default: 'Glissez-d&eacute;posez un fichier ici ou cliquez',
                replace: 'Glissez-d&eacute;posez un fichier ou cliquez pour remplacer',
                remove:  'Supprimer',
                error:   'D&eacute;sol&eacute;, le fichier est trop volumineux'
            }
        })
        // Hide the extra label rendered by bootstrap_twig
        .parents('.form-group').find('label').hide();
    </script>
{% endblock %}

