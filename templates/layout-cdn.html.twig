{% extends "base.html.twig" %}

{# in html header #}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
{% endblock stylesheets %}

{# At the end of body #}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}

{# body elements #}
{% block logo %}
    <div class="row justify-content-center">
        <h1><a class="shinigami-logo font-effect-fire-animation" href=/index.html">Shinigami Laser</a></h1>
    </div>
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="row justify-content-center" style="width: 100%">
            <div class="col col-md-10 col-lg-8 ml-2 ml-md-0">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="burger"><span></span></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav align-items-left mr-auto">
                        {% include 'components/_navbar.twig' %}
                    </ul>

                    <ul class="navbar-nav align-items-right mr-0">
                        {% include 'components/actions' %}
                    </ul>

                </div>
            </div>
        </div>
    </nav>
{% endblock %}


{% block messages %}
        {% for key,type in app.flashes %}
            {% for message in type %}
                <div class="alert alert-{{ key }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    {% endblock %}

{% block footer %}
    <footer class="text-muted text-small text-center">
        <p class="mb-1">&copy; 2019-2020 Shinigami Laser</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">blabla</a></li>
            <li class="list-inline-item"><a href="#">tralala</a></li>
            <li class="list-inline-item"><a href="#">youpla</a></li>
        </ul>
    </footer>
{% endblock %}

