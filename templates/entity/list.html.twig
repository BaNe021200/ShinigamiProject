{% extends "layout.html.twig" %}

{% block page_title %}
    {{ title }}
{% endblock %}

{% block page %}
    <div class="row content-list-head my-2 justify-content-between align-items-center">
        <div class="col-auto">
            <h3>{{ title }}</h3>
        </div>
        <form class="col-md-auto my-2">
            <div class="input-group input-group-round">
                <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                </div>
                <input type="search" class="form-control filter-list-input" placeholder="{% block item_search_placeholder '' %}" aria-label="Filter Tasks" aria-describedby="filter-tasks">
            </div>
        </form>
    </div>
    <div class="row content-list-body my-2">
        {% set prefix = getEntityPrefixRoute(items.0) %}
        {% for item in items %}
            <div class="card my-2 px-0 bg-white rounded border-0 col-12">
                <div class="card-header d-flex pt-1 pb-0 justify-content-between">
                    <h5 class="d-inline">{% block item_title '' %}</h5>
                    {{ include('components/_item_actions.twig') }}
                </div>
                <div class="card-body d-flex justify-content-between pl-0 pt-2 border rounded-bottom">
                    {% block item_body '' %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}