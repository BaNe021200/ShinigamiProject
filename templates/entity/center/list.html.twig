{% extends "layout.html.twig" %}

{% block page_title %}
    Nos centres
{% endblock %}

{% block page %}
    <div class="row content-list-head justify-content-between my-2">
    <div class="col-auto">
        <h3>Nos centres :</h3>
    </div>
    <form class="col-md-auto my-2">
        <div class="input-group input-group-round">
            <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
            </div>
            <input type="search" class="form-control filter-list-input" placeholder="Chercher un joueur" aria-label="Filter Tasks" aria-describedby="filter-tasks">
        </div>
    </form>
</div>
    <div class="row content-list-body my-2">
        {% for item in items %}
            <div class="card my-2 container-fluid bg-white rounded">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <div>
                            <a href="#" data-toggle="tooltip" title="Kenny">
                                <img alt="Centre Shingami" class="img-thumbnail" src="{{ asset (item.image) }}">
                            </a>
                        </div>
                        <span class="text-small ml-2">{{ item.code }}</span>
                    </div>
                    <div>
                        {{ include('components/_item_button_actions.twig') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}