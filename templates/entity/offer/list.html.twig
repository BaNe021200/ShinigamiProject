{% extends "layout.html.twig" %}

{% block page_title %}
    Nos offres
{% endblock %}

{% block page %}
    <div class="row content-list-head my-2 justify-content-between align-items-center">
        <div class="col-auto">
            <h3>Nos offres</h3>
        </div>
        <form class="col-md-auto my-2">
            <div class="input-group input-group-round">
                <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                </div>
                <input id="shini-autocomplete" type="search" class="form-control filter-list-input" placeholder="Rechercher une offre" aria-label="Filter Tasks" aria-describedby="filter-tasks">
            </div>
        </form>
    </div>
    <div class="row content-list-body my-2">
        {% for item in items %}
            <div class="card my-2 px-0 bg-white rounded border-0 col-12">
                <div class="card-header d-flex pt-1 pb-0 justify-content-between">
                    <h5 class="d-inline">{{ item.name |title }}</h5>
                    {% if is_granted('ROLE_STAFF') %}
                        <div class="dropdown card-options">
                            <button class="btn-options" type="button" {#id="task-dropdown-button-1"#} data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="{{ path( 'shini.offer.edit', { 'id' : item.id }) }}">Modifier</a>
                                <a class="dropdown-item" href="{{ path( 'shini.offer.delete', { 'id' : item.id }) }}">Supprimer</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="card-body d-flex justify-content-between pl-0 pt-2 border rounded-bottom">
                    <div class="col-12 col-sm-4">
                        <a href="#" data-toggle="tooltip" title="{{ item.name }}">
                            <img alt="Offre Shinigami" class="img-thumbnail" src="{{ asset (item.image) }}">
                        </a>
                    </div>
                    <div class="col">
                        <p class="card-text">{{ item.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


