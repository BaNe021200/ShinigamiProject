{% extends "layout.html.twig" %}

{% block page_title %}
    {{ title }}
{% endblock %}

{% block page %}
    <div class="row">
        <img class="w-100 border p-2" alt="{{ item.name }}" src="{{ asset (item.image) }}">
    </div>

    <div class="row content-list-head my-2 pt-3 justify-content-between align-items-center">
        <h3>{{ item.name |title }}</h3>
        {% if is_granted('ROLE_STAFF') %}
            <div class="dropdown card-options">
                <button class="btn-options" type="button" {#id="task-dropdown-button-1"#} data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="{{ path( 'shini.offer.edit', { 'id' : item.id }) }}">Modifier</a>
                    <a class="dropdown-item" href="{{ path( 'shini.offer.delete', { 'id' : item.id }) }}">Supprimer</a>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="row my-3">
        <p>{{ item.description }}</p>
    </div>
{% endblock page %}

