{% extends "base.html.twig" %}

{# in html header #}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/shinigami.css') }}">
{% endblock stylesheets %}

{# At the end of body #}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

{% endblock %}

{# body elements #}
{% block top %}



    <div class="row ml-sm-4">
            <h1><a class="shinigami-logo font-effect-fire-animation" href="{{ path('shini.index') }}">Shinigami&nbsp;Laser</a></h1>
    </div>
    <div class="row justify-content-between align-items-center">
        <div id="nav-left" class="ml-sm-4">
            {% include 'components/_navbar.twig' %}
        </div>
        <div id="nav-right">
            {% include 'components/_navbar_user_button.twig' %}
        </div>
    </div>
{% endblock %}


{% block footer %}
    <footer class="text-small text-center">
        <p class="mb-1">&copy; 2019-2020 Shinigami Laser</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Les offres</a></li>
            <li class="list-inline-item"><a href="#">Salles de jeux</a></li>
            <li class="list-inline-item"><a href="#">Contact</a></li>
        </ul>
    </footer>
{% endblock %}

