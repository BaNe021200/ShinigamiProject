                    </div>
                </section>
                <section id="output"></section>

            </div>#}

            </div>
        </div>

        <div class="row">
            <div class="col-md-6">{{ form_row(form.password.first) }}</div>
            <div class="col-md-6">{{ form_row(form.password.second) }}</div>

        </div>


        {{ form_widget(form) }}

        {{ form_end(form) }}
        <a href="{{ path('shini.player.list') }}"><button class="btn btn-info ">{{ button_label|default('Retour Ã  la liste') }}</button></a>

    </div>
