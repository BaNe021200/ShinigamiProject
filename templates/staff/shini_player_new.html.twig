{% extends 'base.html.twig' %}

{% block title %}New ShiniPlayer{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/cities.css') }}">
{% endblock %}


{% block body %}
    <h1>Create new ShiniPlayer</h1>

    <div class="container">
        {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}

        <div class="row">

            <div class="col-md-4">{{ form_row(form.name) }}</div>
            <div class="col-md-4">{{ form_row(form.lastname) }}</div>
            <div class="col-md-4">{{ form_row(form.nickName) }}</div>

        </div>

        <div class="row">

            <div class="col-md-4">{{ form_row(form.birthday) }}</div>
            <div class="col-md-4">{{ form_row(form.email) }}</div>
            <div class="col-md-4">{{ form_row(form.phone) }}</div>
        </div>

        <div class="row">

            <div class="col-md-4">{{ form_row(form.address) }}</div>
            <div class="col-md-4">{{ form_row(form.postalCode,{'id' : 'code'} ) }}<div id="output"></div></div>
            <div class="col-md-4">{{ form_row(form.city,{'id' : 'city'}) }}

